---
import { Image } from "@astrojs/image/components";
import svgCommand from "@assets/icons/command-line.svg";
---

<script>
  const nav = document.querySelector(".navbar");
  const navLinks = nav.querySelectorAll("a");
  const currentURL = window.location.href;
  navLinks.forEach((link) => {
    if (link.href === currentURL) {
      link.classList.add("active");
    }
  });
</script>

<header
  class="mb-1 flex h-20 w-full flex-row items-center justify-between text-white sm:mb-12"
>
  <h1 class="hidden text-4xl font-bold md:block">RC.</h1>
  <nav class="navbar flex flex-shrink-0">
    <ul
      class="m-0 flex list-none flex-row gap-10 p-0 text-sm text-neutral-500 dark:prose-invert"
    >
      <li><a href="/">Home</a></li>
      <li><a href="/about/">About</a></li>
      <li><a href="/works/">Works</a></li>
      <li><a href="/contact/">Contact</a></li>
    </ul>
  </nav>

  <a class="flex items-center gap-2 text-white">
    <Image
      src={svgCommand}
      alt="Command Line"
      class="block h-5 w-5 text-neutral-400"
    />
    <span class="hidden text-sm text-neutral-400 sm:block">Commands</span>
  </a>

  <a
    href="/contact/"
    class="hidden rounded-xl bg-neutral-700 px-5 py-2 text-xs font-medium transition-all hover:bg-neutral-800 hover:text-neutral-300 sm:block"
    >Letâ€™s talk</a
  >
</header>
