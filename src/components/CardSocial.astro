---
import Card from "@components/Card.astro";
import svgButton from "@assets/icons/icon-card-button.svg";
import svgTwitter from "@assets/icons/twitter.svg";

interface Props {
  title: string;
  category: string;
  image: any;
  imageClassProp?;
}

const { title, category } = Astro.props;
---

<Card classProp="flex-col h-full justify-between p-4 group cursor-pointer">
  <div class="flex h-full items-center">
    <div
      class="mb-5 flex w-full flex-row items-center justify-center gap-4 rounded-4xl border border-neutral-800 p-5 backdrop-blur-[1px] backdrop-brightness-110 sm:flex-col lg:flex-row"
    >
      <div class="w-16 rounded-full border border-neutral-700 p-5">
        <img
          src={svgTwitter.src}
          width={svgTwitter.width}
          height={svgTwitter.height}
          alt="image description"
        />
      </div>
      <div class="w-16 rounded-full border border-neutral-700 p-5">
        <img
          src={svgTwitter.src}
          width={svgTwitter.width}
          height={svgTwitter.height}
          alt="image description"
        />
      </div>
    </div>
  </div>
  <div class="flex flex-row justify-between px-4">
    <div class="prose dark:prose-invert">
      <p
        class="mb-2 text-xs font-semibold uppercase leading-4 tracking-tight text-tertiary"
      >
        {category}
      </p>
      <h2>{title}</h2>
    </div>
    <div>
      <img
        class="opacity-10 transition-opacity duration-300 ease-in-out group-hover:opacity-60"
        src={svgButton.src}
        width={svgButton.width}
        height={svgButton.height}
        alt="image description"
      />
    </div>
  </div>
</Card>
